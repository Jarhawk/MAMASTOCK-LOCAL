{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "description": "Permissions for main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:path:default",
    "core:window:default",
    "core:resources:default",
    "log:default",
    "fs:default",
    "fs:allow-mkdir",
    "fs:create-app-specific-dirs",
    "fs:allow-appdata-write",
    "fs:allow-appdata-write-recursive",
    "fs:write-all"  // keep only in DEV; you will remove for production
  ]
}
