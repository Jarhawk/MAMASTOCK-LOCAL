{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MamaStock",
  "version": "0.1.0",
  "identifier": "com.mamastock.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MamaStock",
        "width": 1024,
        "height": 768
      }
    ]
  },
  "bundle": {
    "targets": ["msi", "nsis"],
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": null
    }
  },
  "plugins": {
    "sql": {
      "default": {
        "path": "mamastock.db"
      }
    }
  }
}
